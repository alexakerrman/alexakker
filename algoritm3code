  cout << "Input time of ringing:\n\n";
  cin >> timeofring;
  cout << "Input day of weak:";
  cin >> a;
  if (a > 7 || a < 1)
  {
      cout << "A wrong, enter the correct date" << endl;
  }
  else
  {
      if (a == 1 || a == 2 || a == 3 || a == 4 || a == 5 && a == 6 && a == 7)
    {
      z = timeofring * c;
      cout << "Your call costs:" << z;
    }  
    else
    {
      z = (timeofring * c) - disscount;
      cout << "Your call costs:" << z << endl;
    }
  }
}

